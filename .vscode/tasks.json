{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Vignettes",
            "type": "shell",
            "command": "Rscript vignettes/build.R",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "R - testthat (nightly)",
            "command": "Rscript",
            "options": {
                "env": {
                    "R_TEST_FULL" : "TRUE"
                }
            },
            "args": [
                "-e",
                "devtools::test()"
            ],
            "group": "test",
            "presentation": {
                "clear": true,
                "panel": "dedicated"
            },
            "problemMatcher": {
                "owner": "R-testthat",
                "severity": "error",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/tests/testthat"
                ],
                "pattern": [
                    {
                        "regexp": "^(Failure|Error)\\s\\((.*\\.[Rr]):(\\d+):(\\d+)\\):\\s(.*)",
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5
                    },
                    {
                        "regexp": "^(.*)$",
                        "message": 1
                    }
                ]
            }
        }
    ]
}